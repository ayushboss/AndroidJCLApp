<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ayushcoding.www.jclapp.Grammar1">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tenses"
        android:id="@+id/buttonGrammarS"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:theme="@style/MyButtonGrammar"
        android:layout_marginTop="55dp" />

    <Button
        android:layout_width="match_parent"
        android:theme="@style/MyButtonGrammar"
        android:layout_height="wrap_content"
        android:text="1st Conjugation"
        android:textColor="#ffffff"
        android:id="@+id/button2GrammarS"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2nd Conjugation"
        android:textColor="#ffffff"
        android:theme="@style/MyButtonGrammar"
        android:id="@+id/button3GrammarS"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3rd Conjugation"
        android:textColor="#ffffff"
        android:id="@+id/button4GrammarS"
        android:theme="@style/MyButtonGrammar"
        android:layout_marginTop="25dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3rd -io Conjugation"
        android:id="@+id/button5GrammarS"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:theme="@style/MyButtonGrammar"
        android:layout_marginTop="55dp" />

    <Button
        android:layout_width="match_parent"
        android:theme="@style/MyButtonGrammar"
        android:layout_height="wrap_content"
        android:text="4th Conjugation"
        android:textColor="#ffffff"
        android:id="@+id/button6GrammarS"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:textColor="#ffffff"
        android:theme="@style/MyButtonGrammar"
        android:id="@+id/button3Grammar"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:textColor="#ffffff"
        android:id="@+id/button4Grammar"
        android:theme="@style/MyButtonGrammar"
        android:layout_marginTop="25dp" />
</LinearLayout>
