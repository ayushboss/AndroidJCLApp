<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarLitStudy"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Latin Literature Study Guide"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/primary_text"
        />
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbarLitStudy"
        >



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ayushcoding.www.jclapp.LitStudyGuide">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="2000dp"
        android:id="@+id/litStudyG"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:clipToPadding="true"
        android:background="#FFFFFF"
        android:elevation="16dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:text=""
            android:id="@+id/titleLit"
            android:padding="16dp"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="468dp"
            android:text=""
            android:id="@+id/subLitStudy"
            android:padding="16dp"
            android:textSize="16sp"/>
</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>